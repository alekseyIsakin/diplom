doctype html

html
  head
    title Раписание
    script(src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous")
    script(type="text/javascript" src="scripts/shedule.js")
    link(rel="stylesheet" href="css/shedule.css")
    link(rel="stylesheet" href="css/header.css")
  body
    div#top_ribbon
      -
      -var r = Groups.length > 0 ? 'для групп: ' + Groups.join(', ') : ''
      h1 Расписание #{r} 
      a#logout(href='/auth/logout', draggable="false")
        div

    - var days=['Понедельник','Вторник','Среда','Четверг','Пятница','Суббота','Воскресенье']
    div(class='week week_media')
      - for (d in days)
        div.overflow_holder
          div.day(id=`day${Number(d)+1}`)
            div.day_name
              span #{days[d]}
            div.hours.grid
              - for (let h=0; h<24; h++)
                div #{h}
            div.classes.grid.classes_no_selected

          
